{
  "name": "raise-me-beos-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec \"tsx --env-file=.env.dev index.ts\"",
    "test": "nodemon --exec \"tsx --env-file=.env.test index.ts\"",
    "test:unit": "vitest run",
    "staging": "node --env-file=.env.staging dist/index.js",
    "prod": "node --env-file=.env.prod dist/index.js",
    "start": "node index.js",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@payos/node": "^2.0.3",
    "@supabase/supabase-js": "^2.90.1",
    "body-parser": "^2.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@express-rate-limit/tsconfig": "^1.0.2",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/hpp": "^0.2.7",
    "@types/supertest": "^2.0.16",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.4"
  }
}
